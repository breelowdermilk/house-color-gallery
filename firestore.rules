rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read/write for anyone
    match /users/{userId} {
      allow read, write: if true;
    }

    // Images collection and subcollections
    match /images/{imageId} {
      allow read: if true;

      // Ratings subcollection - allow read/write for anyone
      match /ratings/{ratingId} {
        allow read, write: if true;
      }

      // Comments subcollection - allow read/write for anyone
      match /comments/{commentId} {
        allow read, write: if true;
      }
    }

    // Allow read on any other collection (for debugging)
    match /{document=**} {
      allow read: if true;
    }
  }
}
